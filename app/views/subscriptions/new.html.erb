<h1>Chargebee Subscription</h1>

<p id="notice"><%= notice %></p>

<%= form_tag('/subscriptions/update', method: :put) do %>
  <div class="field">
    <%= label_tag :chargebee_customer_id %>
    <%= text_field_tag :chargebee_customer_id, '', required: true %>
  </div>

  <div class="field">
    <%= label_tag :date %>
    <%= text_field_tag :date, '', { id: 'datepicker', required: true } %>
  </div>

  <div class="actions">
    <%= submit_tag 'Submit' %>
  </div>
<% end %>
